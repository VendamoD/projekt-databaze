    <thead>
    <tr>
        <th>Name</th>
        <th>Number</th>
        <th>Phone</th>
        {{#admin}}
            <th>Actions</th>
        {{/admin}}
    </tr>
    </thead>

    <tbody>
    {{# rooms }}
        <tr>
            <td>{{ name }}</td>
            <td>{{ no }}</td>
            <td>{{ phone }}</td>
            <td>
                {{#admin}}
                    <form method="post" action="update.php">
                        <input type="hidden" name="room_id" value="{{room_id}}" />
                        <input type="submit" value="Update" class="btn btn-info"/>
                    </form>
                    <form method="post" action="delete.php" onsubmit="return confirm('Really delete room?\nAction cannot be undone!')">
                        <input type="hidden" name="room_id" value="{{room_id}}" />
                        <input type="submit" value="Delete" class="btn btn-danger"/>
                    </form>
                {{/admin}}
            </td>
        </tr>
    {{/ rooms }}
    </tbody>
</table>
