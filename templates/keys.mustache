<h1>Přiřaď zaměstnanci klíč k místnosti</h1>
<div class="mt-3">
    <select name="employees" id="employees">
        {{#employees}}
            <option value="{{employee}}" >{{name}} {{surname}}</option>
        {{/employees}}
    </select>

    <select name="rooms" id="rooms">
        {{#room}}
                <option value="{{room}}">{{name}}</option>
        {{/room}}
    </select>
    <form method="post" action="deleteKey.php" onsubmit="return confirm('Really delete Key?\nAction cannot be undone!')">
            <input type="hidden" name="key_id" value="{{key_id}}" />
            <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
    <input type="hidden" name="key_id" value="{{key.key_id}}">
    <input type="hidden" name="action" value="{{action}}"/>
    <input type="submit" value="{{action}}" class="btn btn-primary">
</div>
